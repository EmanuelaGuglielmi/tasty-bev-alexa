{
    "document": {
        "type": "APL",
        "version": "1.0",
        "theme": "dark",
        "import": [
            {
                "name": "alexa-layouts",
                "version": "1.0.0"
            }
        ],
        "resources": [
            {
                "description": "Stock color for the light theme",
                "colors": {
                    "colorTextPrimary": "#151920"
                }
            },
            {
                "description": "Stock color for the dark theme",
                "when": "${viewport.theme == 'dark'}",
                "colors": {
                    "colorTextPrimary": "#f0f1ef"
                }
            },
            {
                "description": "Standard font sizes",
                "dimensions": {
                    "textSizeBody": 48,
                    "textSizePrimary": 27,
                    "textSizeSecondary": 23,
                    "textSizeSecondaryHint": 25
                }
            },
            {
                "description": "Common spacing values",
                "dimensions": {
                    "spacingThin": 6,
                    "spacingSmall": 12,
                    "spacingMedium": 24,
                    "spacingLarge": 48,
                    "spacingExtraLarge": 72
                }
            },
            {
                "description": "Common margins and padding",
                "dimensions": {
                    "marginTop": 40,
                    "marginLeft": 60,
                    "marginRight": 60,
                    "marginBottom": 40
                }
            }
        ],
        "styles": {
            "textStyleBase": {
                "description": "Base font description; set color",
                "values": [
                    {
                        "color": "@colorTextPrimary"
                    }
                ]
            },
            "textStyleBase0": {
                "description": "Thin version of basic font",
                "extend": "textStyleBase",
                "values": {
                    "fontWeight": "100"
                }
            },
            "textStyleBase1": {
                "description": "Light version of basic font",
                "extend": "textStyleBase",
                "values": {
                    "fontWeight": "300"
                }
            },
            "mixinBody": {
                "values": {
                    "fontSize": "@textSizeBody"
                }
            },
            "mixinPrimary": {
                "values": {
                    "fontSize": "@textSizePrimary"
                }
            },
            "mixinSecondary": {
                "values": {
                    "fontSize": "@textSizeSecondary"
                }
            },
            "textStylePrimary": {
                "extend": [
                    "textStyleBase1",
                    "mixinPrimary"
                ]
            },
            "textStyleSecondary": {
                "extend": [
                    "textStyleBase0",
                    "mixinSecondary"
                ]
            },
            "textStyleBody": {
                "extend": [
                    "textStyleBase1",
                    "mixinBody"
                ]
            },
            "textStyleSecondaryHint": {
                "values": {
                    "fontFamily": "Bookerly",
                    "fontStyle": "italic",
                    "fontSize": "@textSizeSecondaryHint",
                    "color": "@colorTextPrimary"
                }
            }
        },
        "layouts": {},
        "mainTemplate": {
            "parameters": [
                "payload"
            ],
            "items": [
                {
                    "when": "${viewport.shape == 'round'}",
                    "type": "Container",
                    "direction": "column",
                    "width": "100vw",
                    "height": "100vh",
                    "items": [
                        {
                            "type": "Image",
                            "source": "${payload.bodyTemplate3Data.image.sources[0].url}",
                            "scale": "best-fill",
                            "width": "100vw",
                            "height": "100vh",
                            "position": "absolute",
                            "overlayColor": "rgba(0, 0, 0, 0.6)"
                        },
                        {
                            "type": "Container",
                            "direction": "column",
                            "alignItems": "center",
                            "paddingLeft": 30,
                            "paddingRight": 30,
                            "paddingBottom": 200,
                            "items": [
                                {
                                    "headerTitle": "${payload.bodyTemplate3Data.textContent.headerTitle.text}",
                                    "headerAttributionImage": "${payload.bodyTemplate3Data.logoUrl}",
                                    "type": "AlexaHeader"
                                },
                                {
                                    "type": "Text",
                                    "style": "textStylePrimary",
                                    "width": "90vw",
                                    "textAlign": "center",
                                    "text": "<b>${payload.bodyTemplate3Data.textContent.title1.text}</b>"
                                },
                                {
                                    "type": "Text",
                                    "style": "textStyleSecondary",
                                    "width": "90vw",
                                    "textAlign": "center",
                                    "text": "${payload.bodyTemplate3Data.textContent.draftContent.text}"
                                },
                                {
                                    "type": "Text",
                                    "style": "textStylePrimary",
                                    "width": "90vw",
                                    "paddingTop": "40",
                                    "textAlign": "center",
                                    "text": "<b>${payload.bodyTemplate3Data.textContent.title2.text}</b>"
                                },
                                {
                                    "type": "Text",
                                    "style": "textStyleSecondary",
                                    "width": "90vw",
                                    "textAlign": "center",
                                    "text": "${payload.bodyTemplate3Data.textContent.arrivalContent.text}"
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Container",
                    "width": "100vw",
                    "height": "100vh",
                    "items": [
                        {
                            "type": "Image",
                            "width": "100vw",
                            "height": "100vh",
                            "source": "${payload.bodyTemplate3Data.backgroundImage.sources[0].url}",
                            "scale": "best-fill",
                            "position": "absolute"
                        },
                        {
                            "headerTitle": "${payload.bodyTemplate3Data.title}",
                            "headerAttributionImage": "${payload.bodyTemplate3Data.logoUrl}",
                            "type": "AlexaHeader"
                        },
                        {
                            "type": "Container",
                            "paddingLeft": "40",
                            "paddingRight": "72",
                            "direction": "row",
                            "grow": 1,
                            "items": [
                                {
                                    "type": "Image",
                                    "width": "35%",
                                    "height": "75vh",
                                    "source": "${payload.bodyTemplate3Data.image.sources[0].url}",
                                    "scale": "best-fit",
                                    "align": "center"
                                },
                                {
                                    "type": "ScrollView",
                                    "height": "100vh",
                                    "spacing": "70",
                                    "shrink": 1,
                                    "alignSelf": "center",
                                    "item": [
                                        {
                                            "type": "Container",
                                            "items": [
                                                {
                                                    "type": "Text",
                                                    "style": "textStyleBody",
                                                    "text": "<b>${payload.bodyTemplate3Data.textContent.title1.text}</b>"
                                                },
                                                {
                                                    "type": "Text",
                                                    "style": "textStylePrimary",
                                                    "text": "${payload.bodyTemplate3Data.textContent.draftContent.text}"
                                                },
                                                {
                                                    "type": "Text",
                                                    "style": "textStyleBody",
                                                    "paddingTop": "40",
                                                    "text": "<b>${payload.bodyTemplate3Data.textContent.title2.text}</b>"
                                                },
                                                {
                                                    "type": "Text",
                                                    "style": "textStylePrimary",
                                                    "text": "${payload.bodyTemplate3Data.textContent.arrivalContent.text}"
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    }
}